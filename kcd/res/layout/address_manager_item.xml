<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/page_margin_top"
    android:paddingTop="@dimen/page_margin_bottom"
    tools:context=".ResetPasswordActivity" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/page_margin_left"
        android:layout_weight="4"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/default_icon" >
        </ImageView>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:layout_marginRight="@dimen/item_margin_right" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_margin_right"
                android:text="@string/account_name"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_big" />

            <TextView
                android:id="@+id/phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/name"
                android:text="@string/account_phone_num"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_big" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="@dimen/item_margin_top" >

                <TextView
                    android:id="@+id/default_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_tiny_red_bg"
                    android:text="@string/address_default"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/font_tiny" >
                </TextView>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/default_tv"
                    android:text="@string/address"
                    android:textColor="@color/font_gray"
                    android:textSize="@dimen/font_big" >
                </TextView>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/history_lay_gap"
        android:layout_width="@dimen/line_width"
        android:layout_height="match_parent"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/edit_icon" >
        </ImageView>
    </RelativeLayout>

</LinearLayout>