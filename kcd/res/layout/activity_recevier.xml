<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    xmlns:brief="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ResetPasswordActivity" >

    <com.kachade.view.PageTiltleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        title:MidText="@string/my_recevier"
        title:RightVis="false" />

    <View
        android:id="@+id/gap"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/division_height"
        android:layout_below="@+id/title" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/btn_done"
        android:layout_below="@+id/gap" >
    </ListView>

    <TextView
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/page_margin_bottom"
        android:layout_marginLeft="@dimen/page_margin_left"
        android:layout_marginRight="@dimen/page_margin_right"
        android:layout_marginTop="@dimen/page_margin_top"
        android:background="@drawable/button_blue_bg"
        android:gravity="center"
        android:text="@string/new_address"
        android:textColor="@color/font_white"
        android:textSize="@dimen/reset_password_text_size" />

</RelativeLayout>