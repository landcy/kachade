<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".chat_list_view" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/group_lay"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/chat_list_view_left_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/page_margin_bottom"
                android:paddingLeft="@dimen/page_margin_left"
                android:paddingRight="@dimen/page_margin_right"
                android:paddingTop="@dimen/page_margin_top" >

                <ImageView
                    android:layout_width="@dimen/chat_list_icon_tiny"
                    android:layout_height="@dimen/chat_list_icon_tiny"
                    android:layout_marginRight="@dimen/item_margin_right"
                    android:src="@drawable/group" />

                <TextView
                    style="@style/chat_left_text_Item"
                    android:text="@string/group_choice" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contract_lay"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/chat_list_view_left_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/page_margin_bottom"
                android:paddingLeft="@dimen/page_margin_left"
                android:paddingRight="@dimen/page_margin_right" >

                <ImageView
                    android:layout_width="@dimen/chat_list_icon_tiny"
                    android:layout_height="@dimen/chat_list_icon_tiny"
                    android:layout_marginRight="@dimen/item_margin_right"
                    android:src="@drawable/contract" />

                <TextView
                    style="@style/chat_left_text_Item"
                    android:text="@string/contacts_choice" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recevie_lay"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/chat_list_view_left_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/page_margin_bottom"
                android:paddingLeft="@dimen/page_margin_left"
                android:paddingRight="@dimen/page_margin_right" >

                <ImageView
                    android:layout_width="@dimen/chat_list_icon_tiny"
                    android:layout_height="@dimen/chat_list_icon_tiny"
                    android:layout_marginRight="@dimen/item_margin_right"
                    android:src="@drawable/recevie" />

                <TextView
                    style="@style/chat_left_text_Item"
                    android:text="@string/recevie_choice" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/line_width"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingBottom="@dimen/page_margin_bottom"
        android:paddingLeft="@dimen/page_margin_left"
        android:paddingRight="@dimen/page_margin_right"
        android:paddingTop="@dimen/page_margin_top" >

        <TextView
            android:id="@+id/btn_cancel"
            style="@style/chat_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/page_margin_left"
            android:text="@string/cancel"
            android:textColor="@color/font_blue" />

        <Button
            android:id="@+id/btn_sync"
            style="@style/chat_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_blue_bg"
            android:text="@string/sync"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>