<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/page_margin_top"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/top1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/search_histrory_text1"
        android:textColor="@color/font_black"
        android:textSize="@dimen/search_history_text_size" />

    <View
        android:layout_width="@dimen/line_width"
        android:layout_height="match_parent"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/top2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_weight="1"
        android:text="@string/search_histrory_text2"
        android:textColor="@color/font_black"
        android:textSize="@dimen/search_history_text_size" />

</LinearLayout>