<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:paddingTop="2dp"
    tools:context=".ResetPasswordActivity" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/page_margin_top"
        android:paddingTop="@dimen/page_margin_bottom"
        tools:context=".ResetPasswordActivity" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/page_margin_bottom"
            android:layout_marginLeft="@dimen/page_margin_left"
            android:layout_marginRight="@dimen/page_margin_left"
            android:layout_marginTop="@dimen/item_margin_top" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_margin_right"
                android:text="@string/account_name"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_big" />

            <TextView
                android:id="@+id/phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/name"
                android:text="@string/account_phone_num"
                android:textColor="@color/font_black"
                android:textSize="@dimen/font_big" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="@dimen/item_margin_top"
                android:text="@string/address"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/font_big" >
            </TextView>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_width"
            android:background="@color/line_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/page_margin_bottom"
            android:layout_marginLeft="@dimen/page_margin_left"
            android:layout_marginRight="@dimen/page_margin_right"
            android:layout_marginTop="@dimen/page_margin_top" >

            <RadioButton
                android:id="@+id/btn_defalut"
                style="@style/My_Recevier_RadioButton"
                android:button="@null"
                android:drawableLeft="@drawable/button_address_default_bg"
                android:gravity="center"
                android:text="@string/set_default_address" />

            <RadioButton
                android:id="@+id/btn_edit"
                style="@style/My_Recevier_RadioButton"
                android:layout_toLeftOf="@+id/btn_delt"
                android:button="@null"
                android:drawableLeft="@drawable/edit"
                android:gravity="center"
                android:text="@string/edit" />

            <RadioButton
                android:id="@+id/btn_delt"
                style="@style/My_Recevier_RadioButton"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:drawableLeft="@drawable/del"
                android:gravity="center"
                android:text="@string/del" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/line_color" />

</LinearLayout>