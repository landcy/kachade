<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    xmlns:brief="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".ResetPasswordActivity" >

    <com.kachade.view.PageTiltleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        title:MidText="@string/cashier"
        title:RightVis="false" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/page_margin_bottom"
        android:paddingLeft="@dimen/page_margin_left"
        android:paddingRight="@dimen/page_margin_right"
        android:paddingTop="@dimen/page_margin_top" >

        <TextView
            android:id="@+id/left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/pay"
            android:textColor="@color/black"
            android:textSize="@dimen/cashier_text_size" />

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="1243"
            android:textSize="@dimen/cashier_text_size"
            android:textColor="@color/red" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/page_margin_bottom"
        android:paddingLeft="@dimen/page_margin_left"
        android:paddingRight="@dimen/page_margin_right"
        android:paddingTop="@dimen/page_margin_top" >

        <TextView
            android:id="@+id/left1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/kcd_currency"
            android:textColor="@color/black"
            android:textSize="@dimen/cashier_text_size" />

        <TextView
            android:id="@+id/mid_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:layout_toRightOf="@+id/left1_tv"
            android:text="@string/can_used_currency"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/cashier_tiny_text_size" />

        <TextView
            android:id="@+id/right2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="1243"
            android:textColor="@color/red"
            android:textSize="@dimen/cashier_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/line_color" />

    <com.kachade.view.BriefHorizontalItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        brief:BH_LeftText="@string/wechat_pay"
        brief:BH_MidIconVis="false"
        brief:BH_MidTextVis="false"
        brief:BH_RightIconVis="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/line_color" />

    <com.kachade.view.BriefHorizontalItemView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        brief:BH_LeftText="@string/ali_pay"
        brief:BH_MidIconVis="false"
        brief:BH_MidTextVis="false"
        brief:BH_RightIconVis="true" />

</LinearLayout>